(define (pick-up ?p - package ?l - location)
  (at ?agent - agent)
  (has ?agent - agent ?p - package)
  (in ?p - package ?l - location)
  (available ?agent - agent)
)

(define (move ?agent - agent ?from - location ?to - location))
  (connected ?from - location ?to - location)
  (at ?agent - agent ?from - location)
  (available ?agent - agent)

(define (drop-off ?p - package ?l - location)
  (at ?agent - agent)
  (has ?agent - agent ?p - package)
  (in ?p - package ?l - location)
  (available ?agent - agent)
)

(define (deliver ?p - package)
  (in ?p - package ?l - location)
  (delivered ?p - package)
  (available ?agent - agent)
)